10  REM STARTUP - Have fun coding on Apple II !
20  REM Press C to load the TITLE in 80 Column mode
30  REM Run the DEMO by pressing any other Key during load

50  A = 0 : REM force 80 COL and DOUBLE HI-RES

100  TEXT : NORMAL : D$ = CHR$(4)
200  X = PEEK(-16368) : REM Clear keyboard strobe
250  BLINK = 0 : LOOPS = 0
300  IF BLINK > 3 AND BLINK < 8 THEN INVERSE : VTAB(1) : PRINT " " : NORMAL : GOTO 400
350  VTAB(1) : PRINT " "
400  K = PEEK(-16384)
410  IF K = 195 OR K = 67 OR K = 99 THEN A = 1 : GOTO 580
420  IF K = 27 THEN TEXT : HOME : END
430  IF K > 12 THEN 900
450  BLINK = BLINK + 1
500  IF BLINK < 10 THEN 300
550  BLINK = 0 : LOOPS = LOOPS + 1 : IF LOOPS < 4 - A THEN 300
580  PRINT CHR$(12);
590  POKE 49239,0 : REM Turn ON HI-RES
600  IF A = 0 THEN 700
610  PRINT D$;"PR#3" : PRINT CHR$(12);
620  POKE 49237,0 : PRINT D$;"BLOAD TITLE.DHGR, A$2000, L$2000" : REM LOAD IMAGE INTO RAM
630  POKE 49236,0 : PRINT D$;"BLOAD TITLE.DHGR, A$2000, L$2000, B$2000" : REM LOAD IMAGE INTO AUX
635  POKE 49237,0 : REM Switch back to MAIN
640  POKE 49232,0 : REM Turn ON GRAPHICS
650  POKE 49235,0 : REM Turn ON Mixed Mode (49234 for FULLSCREEN)
660  POKE 49246,0 : REM Turn ON DHR
690  GOTO 800
700  PRINT D$;"BLOAD TITLE.HGR, A$2000"
710  POKE 49232,0
720  POKE 49235,0
800  HTAB(7 + A * 20) : VTAB(23) : PRINT "Have fun coding on Apple II !";
850  END
900  PRINT D$;"RUN DEMO"
